---
import Layout from "@/layouts/Layout2.astro";
import { Phone, Facebook, Instagram, MapPin } from "lucide-react";
import whatsapp from "@/assets/whatsapp.tiff";
import { Image } from "astro:assets";
import { WHATSAPP_URL, FACEBOOK_URL, INSTAGRAM_URL, PHONE_URL, PHONE_NUMBER } from "astro:env/server";
---
<Layout>
  <article class="flex flex-col h-full w-10/12 md:w-11/12 2xl:w-8/12 mx-auto my-auto gap-8 md:gap-16 pb-16 md:pb-0">
    <h1 class="text-4xl font-bold">Contáctanos</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <a href={WHATSAPP_URL} target="_blank" rel="noopener noreferrer" class="flex flex-col items-center gap-4 p-6 rounded-lg bg-gradient-to-br from-green-500/85 to-green-600/85 text-white hover:from-green-600/85 hover:to-green-700/85 transition-colors">
        <Image src={whatsapp} alt="WhatsApp" class="size-12" />
        <span class="text-lg font-medium">WhatsApp</span>
        <span class="text-sm text-center">Escríbenos por WhatsApp</span>
      </a>

      <a href={PHONE_URL} class="flex flex-col items-center gap-4 p-6 rounded-lg bg-gradient-to-br from-cyan-500/85 to-cyan-600/85 text-white hover:from-cyan-600/85 hover:to-cyan-700/85 transition-colors">
        <Phone className="size-12" />
        <span class="text-lg font-medium">Teléfono</span>
        <span class="text-sm text-center">Llámanos al {PHONE_NUMBER}</span>
      </a>

      <a href={FACEBOOK_URL} target="_blank" rel="noopener noreferrer" class="flex flex-col items-center gap-4 p-6 rounded-lg bg-gradient-to-br from-blue-600/85 to-blue-700/85 text-white hover:from-blue-700/85 hover:to-blue-800/85 transition-colors">
        <Facebook className="size-12" />
        <span class="text-lg font-medium">Facebook</span>
        <span class="text-sm text-center">Síguenos en Facebook</span>
      </a>

      <a href={INSTAGRAM_URL} target="_blank" rel="noopener noreferrer" class="flex flex-col items-center gap-4 p-6 rounded-lg bg-gradient-to-br from-pink-500/85 to-purple-600/85 text-white hover:from-pink-600/85 hover:to-purple-700/85 transition-colors">
        <Instagram className="size-12" />
        <span class="text-lg font-medium">Instagram</span>
        <span class="text-sm text-center">Síguenos en Instagram</span>
      </a>

      <button type="button" class="flex flex-col items-center gap-4 p-6 rounded-lg bg-gradient-to-br from-red-500/85 to-red-600/85 text-white hover:from-red-600/85 hover:to-red-700/85 transition-colors">
        <MapPin className="size-12" />
        <span class="text-lg font-medium">Ubicación</span>
        <span class="text-sm text-center">Encuéntranos en zona 11 de Ciudad Guatemala</span>
      </button>
    </div>

  </article>
</Layout>